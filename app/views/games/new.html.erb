<div class="container">
  <div class="row">
  <h1 class="text-center my-5">New Game</h1>
  <ul class="list-group list-group-horizontal text-center px-5 mb-5">
    <% @letters.each do |letter| %>
      <li class="list-group-item flex-fill border-0"><span class="badge bg-primary p-3 fs-2"><%= letter %></span></li>
    <% end %>
  </ul>
  </div>
</div>
<div class="container">
  <div class="row">
  <h2 class="text-center mb-3">What's the longest word you can find?</h2>
  <form action="/score" method="score" data-turbo="false">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <div class="input-group mb-3">
      <input type="text" name="word" class="form-control" placeholder="Your word" aria-label="User word" aria-describedby="button-addon2">
      <div class="input-group-append">
        <button class="btn btn-outline-secondary" type="button" id="button-addon2">Play</button>
      </div>
    </div>
  </form>
  </div>
</div>
